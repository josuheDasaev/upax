<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Upax" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#455a64</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="M">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="M">true</item>
        <item name="android:navigationBarColor">#cfd8dc</item>
        <!-- Customize your theme here. -->

    </style>

    <!-- navigation ui style. -->
    <style name="navigation" parent="Theme.Upax">
        <item name="colorOnSurface">@color/black</item>             <!-- text color. -->
        <item name="colorOnSurfaceVariant">#292626</item>           <!-- icon inactive. -->
        <item name="colorOnSecondaryContainer">@color/black</item>  <!-- icon active. -->
        <item name="colorSecondaryContainer">#e0f7fa</item>         <!-- indicator color. -->
    </style>

    <!-- text color. -->
    <style name="textColor">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>